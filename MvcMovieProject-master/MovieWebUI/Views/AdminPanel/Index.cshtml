@model MovieListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <title>Admin Panel</title>
    <link href="~/css/detail.css" rel="stylesheet" />

</head>
<body>
    <div class="Container">
        <div class="AdminPanel">
            <div class="Logo">
                <div class="images">
                    
                    <img src="~/İmages/user.png" />
                </div>
                <div class="title">Admin</div>
            </div>

            <div class="Links">
                <ul>
                    <li><a href="@Url.Action("Index","AdminPanel")"><i style="margin-right: 19px;" class="fa fa-table" aria-hidden="true"></i>Filmleri Listele</a></li>
                    <li><a href="@Url.Action("MovieCreate","AdminPanel")"><i style="margin-right: 19px;" class="fa fa-plus" aria-hidden="true"></i>Film Ekle</a></li>
                    <li><a href="@Url.Action("Index","Movie")"><i style="margin-right: 19px;" class="fa fa-times" aria-hidden="true"></i>Çıkış Yap</a></li>

                </ul>
            </div>
        </div>
        <div class="Content">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">İd</th>
                        <th scope="col">Film İsmi</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Kategorisi</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Movies.Data)
                    {
                        <tr>
                            <th scope="row">@item.MovieId</th>
                            <td>@item.MovieTitle</td>
                            <td>@item.MovieDescription.Substring(0,50)...</td>
                            <td>Aksiyon</td>
                            <td><a href="/AdminPanel/Delete?id=@item.MovieId"><button type="button" class="btn btn-danger mr-2"><i class="fas fa-trash"></i> Sil</button></a></td>
                            <td><a href="/AdminPanel/MovieUpdate?movie=@item.MovieId"> <button type="button" class="btn btn-warning"><i class="fas fa-edit"></i> Güncelle</button></a></td>
                        </tr>
                    }
                    

                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>
</html>